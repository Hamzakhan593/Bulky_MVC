@page
@model BulkyWebRazor_Temp.Pages.categories.DeleteModel


<form method="post">
    <input asp-for="deleteCategory.CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div> *@
        <div class="mb-3 row">
            <label asp-for="deleteCategory.CategoryName" class="p-1"></label>
            <input asp-for="deleteCategory.CategoryName" disabled type="text" class="form-control" />
            <span asp-validation-for="deleteCategory.CategoryName" class="text-bg-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="deleteCategory.CategoryDisplayOrder" class="p-1"></label>
            <input asp-for="deleteCategory.CategoryDisplayOrder" disabled type="number" class="form-control" />
            @* <span asp-validation-for="CategoryDisplayOrder" class="text-bg-danger"></span> *@
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-page="/Categories/index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

