@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <h2 class="text-primary fw-bold mb-4">@ViewData["Title"]</h2>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="mb-4">Are you sure you want to log out?</p>

                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger px-4 py-2">Yes, Log me out</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <p class="mb-0">You have successfully logged out of the application.</p>
                        </div>
                        <a class="btn btn-primary mt-3" asp-area="" asp-page="/Index">Go to Home</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
