@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body px-5 py-4">
                    <h2 class="text-center text-gradient mb-4">@ViewData["Title"]</h2>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3 text-start">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-gradient w-100 py-2 mb-3">Log In</button>

                        <div class="text-center">
                            <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                            <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <h6 class="text-muted">Or log in with</h6>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex gap-2 justify-content-center flex-wrap">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> @provider.DisplayName
                                        </button>
                                    }
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #4f46e5, #3b82f6);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #4338ca, #2563eb);
        }

    .text-gradient {
        background: -webkit-linear-gradient(45deg, #4f46e5, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }
</style>
