@model Bulky.Models.ViewModel.ShoppingCartVM

<form method="post">
    <div class="container my-4">
        <div class="card shadow-lg border-0">

            <!-- Header -->
            <div class="card-header text-white py-4"
                 style="background: linear-gradient(90deg, #4b6cb7, #182848);">
                <div class="row px-3 align-items-center">
                    <div class="col-6">
                        <h4 class="mb-0">📦 Order Summary</h4>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-light btn-sm fw-semibold shadow-sm">
                            ← Back to Cart
                        </a>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="card-body bg-light">
                <div class="row px-3">

                    <!-- Shipping Form -->
                    <div class="col-12 col-lg-6 pb-4">
                        <h5 class="text-dark mb-3 border-bottom pb-2">🚚 Shipping Details</h5>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">Name</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.Name" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">Phone</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.PhoneNumber" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">Street Address</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.StreetAddress" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">City</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.City" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">State</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.State" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.State" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="fw-semibold">Postal Code</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="OrderHeader.PostalCode" class="form-control shadow-sm" />
                                <span asp-validation-for="OrderHeader.PostalCode" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <h5 class="text-dark mb-3 border-bottom pb-2">🧾 Order Summary</h5>
                        <ul class="list-group shadow-sm mb-4 rounded">
                            @foreach (var details in Model.ShoppingCartList)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">@details.Product.Title</h6>
                                        <small class="text-muted">Qty: @details.Count</small>
                                    </div>
                                    <span class="fw-semibold text-secondary">@((details.Price * details.Count).ToString("c"))</span>
                                </li>
                            }

                            <li class="list-group-item d-flex justify-content-between bg-white">
                                <span class="fw-semibold text-primary">Total (USD)</span>
                                <strong class="text-primary fs-5">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-white">
                <div class="row align-items-center px-3">
                    <div class="col-12 col-md-8 mb-2 mb-md-0">
                        <p class="text-muted small mb-0">
                            📅 Estimated Delivery:
                            <span class="fw-semibold text-dark">
                                @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                            </span>
                        </p>
                    </div>
                    <div class="col-12 col-md-4 text-end">
                        <button type="submit" value="Place Order" class="btn btn-success w-100 shadow-sm fw-bold">
                            ✅ Place Order
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
