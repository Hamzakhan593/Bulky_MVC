@model Bulky.Models.ViewModel.ShoppingCartVM

<form method="post">
    <div class="card shadow-lg border-0 my-4">
        <!-- Modern Gradient Header -->
        <div class="card-header text-white py-4"
             style="background: linear-gradient(to right, #283E51, #485563);">
            <div class="d-flex justify-content-between align-items-center px-3">
                <h3 class="mb-0">🛒 Shopping Cart</h3>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-light btn-sm fw-semibold shadow-sm">
                    Continue Shopping
                </a>
            </div>
        </div>

        <!-- Cart Items -->
        <div class="card-body p-4" style="background-color: #f8f9fa;">
            @if (Model.ShoppingCartList != null && Model.ShoppingCartList.Any())
            {
                @foreach (var item in Model.ShoppingCartList)
                {
                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-2 text-center p-2">
                                <img src="@item.Product.ImageURL" class="img-fluid rounded-start" style="max-height: 120px;" />
                            </div>
                            <div class="col-md-10">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold text-dark text-uppercase">@item.Product.Title</h5>
                                    <p class="card-text"><small class="text-muted">@Html.Raw(item.Product.Description)</small></p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <span class="fw-bold text-success">@item.Product.Price.ToString("c")</span>
                                            <span class="text-muted">x</span>
                                            <span class="fw-bold">@item.Count</span>
                                        </div>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Plus" asp-route-cartId="@item.ShopingCartId" class="btn btn-outline-success shadow-sm">
                                                <i class="bi bi-plus-circle-fill"></i>
                                            </a>
                                            <a asp-action="Minus" asp-route-cartId="@item.ShopingCartId" class="btn btn-outline-secondary shadow-sm">
                                                <i class="bi bi-dash-circle-fill"></i>
                                            </a>
                                            <a asp-action="Remove" asp-route-cartid="@item.ShopingCartId" class="btn btn-outline-danger shadow-sm">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning text-center fw-semibold">
                    Your cart is empty.
                </div>
            }
        </div>

        <!-- Summary -->
        <div class="card-footer bg-white border-top">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <ul class="list-group mb-3 shadow-sm">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold text-uppercase text-secondary">Total (USD)</span>
                            <strong class="text-primary fs-5">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                        </li>
                    </ul>
                    <a asp-action="Summary"
                       class="btn w-100 py-2 fw-bold text-white"
                       style="background: linear-gradient(to right, #00c9ff, #92fe9d); border: none;">
                        Proceed to Summary
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
