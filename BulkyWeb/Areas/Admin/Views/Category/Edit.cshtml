@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header" style="background-color: #e8f0fe;">
        <h2 class="text-dark py-2 m-0 text-center">Update Category</h2>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Edit" class="row g-3">
            <input type="hidden" asp-for="CategoryId" />

            @* Display Validation Summary *@
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="col-12">
                <label asp-for="CategoryName" class="form-label fw-semibold"></label>
                <input asp-for="CategoryName" class="form-control shadow-sm" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="CategoryDisplayOrder" class="form-label fw-semibold"></label>
                <input asp-for="CategoryDisplayOrder" class="form-control shadow-sm" />
                <span asp-validation-for="CategoryDisplayOrder" class="text-danger small"></span>
            </div>

            <div class="col-12 d-flex justify-content-start gap-3 pt-3">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save2-fill me-1"></i> Update
                </button>

                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
