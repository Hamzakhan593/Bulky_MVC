@model List<Category>

<div class="container mt-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="text-gradient fw-bold mb-0">📂 Category List</h2>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success shadow-sm px-4">
                <i class="bi bi-plus-circle me-2"></i> Add New Category
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>📁 Category Name</th>
                        <th>📊 Display Order</th>
                        <th class="text-center" style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.CategoryName</td>
                            <td>@obj.CategoryDisplayOrder</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-route-id="@obj.CategoryId" asp-controller="Category" asp-action="Edit" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-route-id="@obj.CategoryId" asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
