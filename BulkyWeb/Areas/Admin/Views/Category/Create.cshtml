@model BulkyWeb.Models.Category

<div class="card shadow border-0 mt-4">
    <div class="card-header" style="background-color: #e8f0fe;">
        <h2 class="text-dark py-2 m-0 text-center">Create Category</h2>
    </div>



    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="row pb-2">
                </div>
                @* <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <label asp-for="CategoryName" class="ms-2"></label>
                    <input asp-for="CategoryName" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="CategoryName" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="CategoryDisplayOrder" class="ms-2"></label>
                    <input asp-for="CategoryDisplayOrder" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="CategoryDisplayOrder" class="text-bg-danger"></span>
                </div>

                <div class="row pt-2 mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}