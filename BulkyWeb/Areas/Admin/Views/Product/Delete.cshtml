@using BulkyWeb.Models
@model Bulky.Models.Product


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="row pb-2">
                </div>
                @* <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Title" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <input disabled asp-for="Description" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2"></label>
                    <input disabled asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Author" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input disabled asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="ISBN" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input disabled asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="ListPrice" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input disabled asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input disabled asp-for="Price50" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price50" class="text-bg-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input disabled asp-for="Price100" type="text" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price100" class="text-bg-danger"></span>
                </div>


                <div class="row pt-2 mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}