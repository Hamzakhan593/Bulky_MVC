@model Bulky.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-danger bg-gradient text-white py-3">
            <h4 class="text-center mb-0">Delete Company</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold text-center mb-3">
                Are you sure you want to delete this company?
            </p>

            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyName)</dd>

                <dt class="col-sm-4">Street Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyStreetAddress)</dd>

                <dt class="col-sm-4">City</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyCity)</dd>

                <dt class="col-sm-4">State</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyState)</dd>

                <dt class="col-sm-4">Postal Code</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyPostalCode)</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.companyphoneNumber)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex justify-content-between mt-4">
                <input type="hidden" asp-for="companyId" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
