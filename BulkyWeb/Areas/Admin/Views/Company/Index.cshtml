@model IEnumerable<Bulky.Models.Company>
@{
    ViewData["Title"] = "Companies";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Company List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().companyName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().companyStreetAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.First().companyCity)</th>
                            <th>@Html.DisplayNameFor(model => model.First().companyState)</th>
                            <th>@Html.DisplayNameFor(model => model.First().companyPostalCode)</th>
                            <th>@Html.DisplayNameFor(model => model.First().companyphoneNumber)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.companyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.companyStreetAddress)</td>
                                <td>@Html.DisplayFor(modelItem => item.companyCity)</td>
                                <td>@Html.DisplayFor(modelItem => item.companyState)</td>
                                <td>@Html.DisplayFor(modelItem => item.companyPostalCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.companyphoneNumber)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.companyId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.companyId" class="btn btn-sm btn-info text-white me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.companyId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
