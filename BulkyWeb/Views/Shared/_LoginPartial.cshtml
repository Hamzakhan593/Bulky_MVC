@* _LoginPartial.cshtml *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Welcome message with user icon - now larger -->
        <li class="nav-item me-3">
            <span class="nav-link text-white px-4 py-2.5 rounded-3 d-flex align-items-center"
                  style="
                        background: rgba(255, 255, 255, 0.1);
                        font-size: 1.05rem;
                        min-height: 44px;
                      ">
                <i class="bi bi-person-circle me-2" style="font-size: 1.2rem;"></i>
                <span>@UserManager.GetUserName(User)</span>
            </span>
        </li>

        <!-- Larger logout button -->
        <li class="nav-item">
            <form id="logoutForm" class="form-inline h-100" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit"
                        class="nav-link btn btn-link text-white px-4 py-2.5 rounded-3 d-flex align-items-center"
                        style="
                                transition: all 0.2s ease;
                                font-size: 1.05rem;
                                min-height: 44px;
                            ">
                    <i class="bi bi-box-arrow-right me-2" style="font-size: 1.2rem;"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <!-- Larger register button -->
        <li class="nav-item mx-2">
            <a class="nav-link text-white px-4 py-2.5 rounded-3 d-flex align-items-center"
               style="
                        transition: all 0.2s ease;
                        font-size: 1.05rem;
                        min-height: 44px;
                   "
               asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-2" style="font-size: 1.2rem;"></i> Register
            </a>
        </li>

        <!-- Larger login button -->
        <li class="nav-item mx-2">
            <a class="nav-link text-white px-4 py-2.5 rounded-3 d-flex align-items-center"
               style="
                        transition: all 0.2s ease;
                        font-size: 1.05rem;
                        min-height: 44px;
                   "
               asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-2" style="font-size: 1.2rem;"></i> Login
            </a>
        </li>
    }
</ul>

<style>
    /* Hover effects matching header */
    #logout:hover, .nav-link:hover {
        background: rgba(255, 255, 255, 0.15) !important;
        transform: translateY(-2px);
    }

    /* Corrected media query */
    @@media (max-width: 992px) {
        .navbar-nav .nav-item

    {
        margin: 0.5rem 0 !important;
    }

    .nav-link, #logout {
        padding-left: 1rem !important;
        justify-content: flex-start !important;
    }

    }
</style>